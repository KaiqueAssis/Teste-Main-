<div id="<%= dom_id post %>" class="card" style="width: 1300px; margin: 30px auto">
  
  <div class="card-header">
    <p class="d-flex row justify-content-between">
      <div>
        <strong>Usuario:</strong>
        <%= post.user.email %>
      </div>
      <div>
        <strong>Data de Criação:</strong>
        <%= post.created_at.strftime("%Y-%m-%d") %>
      </div>      
    </p>

  
  </div>
  <div class="card-body">
    <p>
     <strong>Title:</strong>
      <%= post.title %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= post.description %>
    </p>
  </div>

</div>
