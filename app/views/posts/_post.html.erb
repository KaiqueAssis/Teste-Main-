<div id="<%= dom_id post %>" class="card" style="width: 1300px; margin: 0 auto">
  
  <div class="card-header">
    <p>
      <strong>Usuario</strong>
      <%= post.user %>
    </p>
  </div>

  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= post.description %>
  </p>

</div>
